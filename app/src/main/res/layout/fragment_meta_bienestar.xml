<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/fondo_bity"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/letraNaranja"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="87dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curva_blanca"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="60dp"
        android:paddingLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_foto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_bienestar"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="0dp"
            android:src="@drawable/ic_subir_foto" />

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/fragment_detalle_bienestar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout2">

    </RelativeLayout>

    <com.bitrubio.prototipoebitrubio.ClasesExtendidas.EditTextAvenir
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/nombra_tu_meta"
        android:textColorHint="@color/textColorhint"
        android:textStyle="italic"
        android:textSize="16sp"
        app:font="avenir-light.ttf"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_centerHorizontal="true">

    </com.bitrubio.prototipoebitrubio.ClasesExtendidas.EditTextAvenir>


</RelativeLayout>