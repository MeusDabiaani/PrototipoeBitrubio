<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_comunidad_amigo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/foto_test"
            app:border_color="#25ba9d"
            app:border_width="1dp" />

        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:id="@+id/txt_amigo_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Alan Contreras "
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary"
            android:textSize="16sp"
            app:font="avenir-light.ttf"
            android:layout_alignTop="@+id/txt_beats"
            android:layout_alignLeft="@+id/txt_amigo_estado"
            android:layout_alignStart="@+id/txt_amigo_estado" />

        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:id="@+id/txt_beats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chek_comunidad_beat"
            android:gravity="center"
            android:hint="1"
            android:textSize="14sp"
            app:font="avenir-light.ttf"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chk_bitrubian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/radio_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/textColorPrimary" />

        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:id="@+id/txt_amigo_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Have Fun! "
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/textColorPrimary"
            android:textSize="14sp"
            app:font="avenir-light.ttf"
            android:layout_below="@+id/txt_amigo_nombre"
            android:layout_toRightOf="@+id/img_comunidad_amigo"
            android:layout_toEndOf="@+id/img_comunidad_amigo"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

    </RelativeLayout>

</LinearLayout>