<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_confirmado"/>

        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reporte Realizado"
            android:textSize="16sp"
            app:font="avenir-light.ttf"
            android:textColor="@color/colorAccent"
            />
        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="En breve te enviaremos \n una respuesta"
            android:textSize="16sp"
            app:font="avenir-light.ttf"
            android:textColor="@color/textColorPrimary"
            />
        <ImageButton
            android:layout_margin="30px"
            android:id="@+id/btn_aceptar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/aceptar" />
    </LinearLayout>
</LinearLayout>