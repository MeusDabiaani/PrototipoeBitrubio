<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                android:id="@+id/txt_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:lineSpacingExtra="4dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipis-cing elit. Morbi ut euismod nisl. Duis sed orci nisl. Integer luctus dignissim nunc nec porttitor."
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                app:font="avenir-light.ttf"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/lnr_perfilExpertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lnr_datosExperto"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lnr_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/img_amigos"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/ic_estrella_a" />

                                <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="5"
                                    android:textColor="@color/white"
                                    app:font="avenir-light.ttf"
                                    android:textSize="14sp"/>
                            </RelativeLayout>

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_opiniones"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Ver opiniones"
                                app:font="avenir-light.ttf"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/img_beats"
                                    android:layout_width="42dp"
                                    android:layout_height="42dp"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/ic_beat" />

                                <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    app:font="avenir-light.ttf"
                                    android:text="90"
                                    android:textSize="16sp">

                                </com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir>
                            </RelativeLayout>

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_beats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:text="Beats"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="16sp"
                                app:font="avenir-light.ttf"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnr_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnr_1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/img_expertos"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/ic_pacientes" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_num_pacientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120 pacientes"
                                android:textColor="@color/textColorPrimary"
                                app:font="avenir-light.ttf"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginLeft="12dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/bandera1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/ic_mexico" />

                                <ImageButton
                                    android:id="@+id/bandera2"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_below="@+id/bandera1"
                                    android:background="@drawable/ic_eu" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                    android:id="@+id/txt_idiomas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Español e ingles"
                                    android:textColor="@color/textColorPrimary"
                                    app:font="avenir-light.ttf"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnr_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnr_2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_amigos_comun" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_amigosComun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 amigos en común"
                                android:textSize="16sp"
                                app:font="avenir-light.ttf"
                                android:textColor="@color/textColorPrimary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_costos_a" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_costo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ 500 Mxn"
                                android:textSize="16sp"
                                app:font="avenir-light.ttf"
                                android:textColor="@color/textColorPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:padding="6dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_agregar_comunidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/btn_gris"
                    android:padding="6dp"
                    android:stateListAnimator="@null"
                    android:text="Agregar a mi comunidad"
                    android:textAllCaps="false"
                    android:textColor="@color/textColorPrimary"
                    app:borderWidth="0dp" />
            </LinearLayout>
        </LinearLayout>


</RelativeLayout>
