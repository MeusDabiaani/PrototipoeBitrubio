<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="12dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/rl_miPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagePerfil"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:border_color="@color/colorAccent"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logo_bitrubio" />


        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:id="@+id/nombreSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="Mario Hernandez"
            android:layout_toRightOf="@+id/imagePerfil"
            style="@style/MyTextViewAvenir"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/imagePerfil" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />
    </LinearLayout>
</LinearLayout>
