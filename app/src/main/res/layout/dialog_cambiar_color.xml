<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camara_simple" />

        <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige un color para tu tarjeta"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            app:font="avenir-light.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_azul"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_verde"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_anaranjada"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_roja"
            app:border_color="@color/white"
            app:border_width="2dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_rosa"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_6"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_morada"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_7"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_verdeagua"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/color_8"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:src="@drawable/tarjeta_negra"
            app:border_color="@color/white"
            app:border_width="2dp" />

    </LinearLayout>
</LinearLayout>