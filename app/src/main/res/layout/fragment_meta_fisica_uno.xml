<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fondo_bity"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="6dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.EditTextAvenir
                android:id="@+id/edit_nomMeta"
                style="@style/MyEditTextAvenir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/nombra_tu_meta"
                android:singleLine="true"
                android:textSize="16sp">

            </com.bitrubio.prototipoebitrubio.ClasesExtendidas.EditTextAvenir>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/linerScroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnr_peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_peso_actual"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                android:text="@string/peso_actual"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_resp_peso_actual"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:hint="@string/kilos"
                                android:textColor="@color/letraVerde1" />

                        </LinearLayout>


                        <View style="@style/MyView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/edit_objetivo"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/peso_objetivo"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_resp_peso_objetivo"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/kilos"
                                android:textColor="@color/letraVerde1" />

                        </LinearLayout>

                        <View style="@style/MyView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/edit_tiempo"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/tiempo_meta"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_resp_tiempo"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/dia"
                                android:textColor="@color/letraVerde1" />
                        </LinearLayout>

                        <View style="@style/MyView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/edit_retarAmigos"
                                style="@style/MyTextViewAvenir"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/reta_amigos"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/img_reta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/flecha_derecha"
                                style="@style/MyTextViewAvenir"
                                android:textColor="@color/letraVerde1"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnr_img_reta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>

                        <View style="@style/MyView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_armarEquipo"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/armar_equipo"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/img_apoyo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/flecha_derecha"
                                style="@style/MyTextViewAvenir"
                                android:textColor="@color/letraVerde1"/>

                        </LinearLayout>

                        <View style="@style/MyView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">


                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/edit_privacidad"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/estatus_privacidad"
                                android:textColor="@color/textColorPrimary" />

                            <com.bitrubio.prototipoebitrubio.ClasesExtendidas.TexviewAvenir
                                android:id="@+id/txt_resp_privacidad"
                                style="@style/MyTextViewAvenir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/estatus_privacidad"
                                android:textColor="@color/letraVerde1" />

                        </LinearLayout>

                        <View style="@style/MyView" />
                    </LinearLayout>


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@color/white">

                    <ImageButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="left|bottom"
                        android:layout_margin="30px"
                        android:background="@drawable/cancelar" />

                    <ImageButton
                        android:id="@+id/btn_guardar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="30px"
                        android:background="@drawable/aceptar" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>